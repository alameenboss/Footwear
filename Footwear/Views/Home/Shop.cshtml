@model Footwear.Models.ShopViewModel
@{
    ViewBag.Title = "Shop";

    var counter = 0;
    var count = Model.Products.Count;
    var noOfRows = count % 3 != 0 ? Math.Abs(count / 3) + 1 : (count / 3);
}

@Styles.Render("~/Content/form")

<div class="login">
    <div class="wrap">
        @Html.Partial("Sidebar")

        <div class="cont span_2_of_3">
            @Html.Partial("_ShopToolbar")

            @for (int i = 0; i < noOfRows; i++)
            {
                <div class="box1">
                    @for (int j = 0; j <= 2; j++)
                    {
                        if (counter <= (Model.Products.Count - 1))
                        {
                            @Html.Partial("_DashboardItem", Model.Products[counter])
                        }
                        counter++;
                    }
                    <div class="clear"></div>
                </div>
            }

        </div>
        <div class="clear"></div>
    </div>
</div>


@Scripts.Render("~/bundles/easydropdown")
@Scripts.Render("~/bundles/jscrollpane")
@Scripts.Render("~/bundles/shop")