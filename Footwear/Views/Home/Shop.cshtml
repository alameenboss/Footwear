@model Footwear.Models.ShopViewModel
@{
    ViewBag.Title = "Shop";

    var counter = 0;
    var count = Model.Products.Count;
    var noOfRows = count % 3 != 0 ? Math.Abs(count / 3) + 1 : (count / 3);
}

<div class="login">
    <div class="wrap">
        @Html.Partial("Sidebar")

        <div class="cont span_2_of_3">
            @Html.Partial("_ShopToolbar")

            @for (int i = 0; i < noOfRows; i++)
            {
                <div class="box1">
                    @for (int j = 0; j <= 2; j++)
                    {
                        @Html.Partial("_DashboardItem", Model.Products[counter])

                        counter++;
                    }
                    <div class="clear"></div>
                </div>
            }

        </div>
        <div class="clear"></div>
    </div>
</div>


<link href="~/Content/css/form.css" rel="stylesheet" type="text/css" media="all" />
<script src="~/Content/js/jquery.easydropdown.js"></script>


<script type="text/javascript" src="~/Content/js/jquery.jscrollpane.min.js"></script>
<script type="text/javascript" id="sourcecode">
    $(function () {
        $('.scroll-pane').jScrollPane();
    });
</script>