@model Footwear.Models.ProductViewModel

<div class="col_1_of_3 span_1_of_3">
    <a href="/Home/Single/@Model.Id">
        <div class="view view-fifth">
            <div class="top_box">
                <h3 class="m_1">@Model.Heading</h3>
                <p class="m_2">@Model.SubHeading</p>
                <div class="grid_img">
                    <div class="css3"><img src="@Model.ImageUrl" alt="" /></div>
                    <div class="mask">
                        <div class="info">Quick View</div>
                    </div>
                </div>
                <div class="price">Rs. @Model.Amount</div>
            </div>
        </div>
        @Html.EditorFor(x => x.Rating, "Rating", new { Name = Model.RatingName, Count = Model.Count })
        <ul class="list">
            <li>
                <img src="~/Content/images/plus.png" alt="" />
                <ul class="icon1 sub-icon1 profile_img">
                    <li>
                        <a class="active-icon c1" href="#">Add To Bag </a>
                        <ul class="sub-icon1 list">
                            <li><h3>@Model.ProductHeading</h3><a href=""></a></li>
                            <li><p>@Model.Descrption  <a href="">@Model.LinkDescription</a></p></li>
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>
        <div class="clear"></div>
    </a>
</div>